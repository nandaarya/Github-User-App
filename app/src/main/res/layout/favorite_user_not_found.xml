<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_not_found"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/baseline_people_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_not_found_1"
        style="@style/Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/favorite_user_not_found"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_not_found"
        app:layout_constraintStart_toStartOf="@+id/iv_not_found"
        app:layout_constraintTop_toBottomOf="@id/iv_not_found"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_not_found_2"
        style="@style/Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/favorite_user_not_found_2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_not_found_1"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>